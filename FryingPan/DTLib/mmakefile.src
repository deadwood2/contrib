DESTDIR := $(AROS_CONTRIB)/FryingPan/Libs

CXXFILES := \
 Main \
 FileReader \
 FileWriter \
 ReaderHook \
 WriterHook \
 rAIFFAudio \
 rRAWAudio \
 rSplitISOData \
 rISOData \
 rMP3Audio \
 rWAVAudio \
 wRAWAudioData \
 wSplitISOData \
 wAIFFAudio \
 wWAVAudio \
 wCUESession \
 rCUESession \
 rNRGSession

USER_INCLUDES := $(CFLAGS_ISYSTEM) $(SRCDIR)/$(CURDIR)/../framework \
        $(CFLAGS_ISYSTEM) $(SRCDIR)/$(CURDIR)/..  $(CFLAGS_ISYSTEM_END) -I$(GENDIR)/$(CURDIR)/../framework/include
USER_CXXFLAGS := $(CXXFLAGS_CXX11) $(CFLAGS_NO_RTTI) $(CFLAGS_NO_EXCEPTIONS) 
USER_LDFLAGS := $(TARGET_CXX_LDFLAGS) -nostdlib -nostdlib++ -L$(GENDIR)/$(CURDIR)/../framework -Wl,--start-group -lGeneric -lLibrary -lC -Wl,--end-group

%build_prog mmake=contrib-fryingpan-dtlib progname="dtlibio.module" \
 targetdir=$(DESTDIR) files= cxxfiles="$(CXXFILES)" uselibs="amiga libinit autoinit" usestartup=no
