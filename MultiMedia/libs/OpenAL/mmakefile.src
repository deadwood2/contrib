FILES   :=  openal-info
EXEDIR  := $(AROS_TESTS)/OpenAL

USER_INCLUDES := -I$(AROS_INCLUDES)/SDL -I$(AROS_CONTRIB_INCLUDES)

%build_progs mmake=contrib-openal-utils \
    targetdir=$(EXEDIR) \
    files="$(addprefix $(OPENALARCHSRCDIR)/utils/,$(FILES))" uselibs="openal pthread"

